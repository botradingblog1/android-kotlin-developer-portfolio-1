                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_item_margin_med"
                        android:textStyle="bold"
                        android:text="@string/experience_company4_name"/>
                <TextView
                        style="@style/AppTheme.PageBodyAccent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_item_margin_med"
                        android:text="@string/experience_company4_title"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/vertical_item_margin_med"
                        android:background="@color/colorDarkGrey"/>

                <TextView
                        style="@style/AppTheme.PageBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_item_margin_med"
                        android:text="@string/experience_company4_description"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


