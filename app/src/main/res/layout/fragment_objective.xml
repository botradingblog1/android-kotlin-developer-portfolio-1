<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="@dimen/page_frame_padding"
    android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <TextView
                android:id="@+id/item_detail"
                style="@style/AppTheme.PageHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_me"
                android:textIsSelectable="true"
                tools:context=".ItemDetailFragment" />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"/>

        <!-- Your Content Here -->
        <TextView
                style="@style/AppTheme.PageHeading1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_item_margin_large"
                android:text="@string/about_me_objective"/>

        <TextView
                style="@style/AppTheme.PageBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_item_margin_med"
                android:text="@string/about_me_summary"/>

        <TextView
                style="@style/AppTheme.PageHeading1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_item_margin_large"
                android:text="@string/about_me_summary_title"/>
        <TextView
                style="@style/AppTheme.PageBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_item_margin_med"
                android:text="@string/about_me_bullets"/>
    </LinearLayout>
</ScrollView>
